<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.oneTimeCodeFragment.OneTimeCodeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/header_shape">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="bottom">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="14dp"
                android:layout_marginStart="23dp"
                android:layout_gravity="center"
                android:id="@+id/backButton"
                android:background="@drawable/ic_backbutton"
                android:layout_height="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="197dp"
                android:layout_height="33dp"
                android:text="Verification"
                android:textStyle="bold"
                android:layout_marginStart="65dp"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:gravity="center"
                android:textAlignment="center"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    
    
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:layout_marginTop="22dp"
        android:text="Code will be sent on "
        android:textSize="16sp"
        android:textColor="#30BB2E"
        android:id="@+id/otcTV"
        android:paddingStart="23dp"/>
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="42dp">

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_edittextbackground"
            android:layout_marginStart="21dp"
            android:inputType="number"
            android:hint="Enter your code here"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:id="@+id/otcET"/>
        
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_sms"
            android:text="SMS"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continueToYourAccount"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_startpagesbutton"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Continue To Your Account"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:layout_height="42dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>